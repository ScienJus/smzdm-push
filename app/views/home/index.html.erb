<div id="main">
	<table id="main-table" class="table table-bordered table-hover">
		<thead>
			<tr>
				<th class="keyword">关键词</th>
				<th>管理<button type="button" class="btn btn-success btn-create btn-xs" data-toggle="modal" data-target="#create-modal">新增</button></th>
			</tr>
		</thead>
		<tbody>
			<% @user.keywords.each do |keyword| %>
				<tr>
					<td><%= keyword.name %></td>
					<td><button type="button" class="btn btn-danger btn-remove" keyword_id="<%= keyword.id %>">删除</button></td>
				</tr>
			<% end %>
			<tr id="tr-tools">
				<td colspan=2>
					<% if @user.active %>
						<button type="button" class="btn btn-warning btn-xs btn-unactive">暂时不想收到订阅</button>
					<% else %>
						<button type="button" class="btn btn-info btn-xs btn-active">恢复订阅</button>
					<% end %>
					<button type="button" class="btn btn-danger btn-clear btn-xs">清除账号信息</button>
				</td>
			</tr>
		</tbody>
	</table>
</div>

<div id="create-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">添加关键词</h4>
      </div>
      <div class="modal-body">  
		<div id="modal-body">
			<form class="form-inline">
				<input type="text" id="input-keyword" class="form-control" placeholder="请输入关键词">
				<button type="button" id="submit-keyword" class="btn btn-success">添加</button>
	      	</form>
			<h3>热门标签</h3>
			<!--如果以后有用户，推订阅数前50的关键词-->
			<button type="button" class="btn btn-default btn-key">双11</button>
			<button type="button" class="btn btn-primary btn-key">iPad</button>
			<button type="button" class="btn btn-success btn-key">咖啡</button>
			<button type="button" class="btn btn-info btn-key">冰箱</button>
			<button type="button" class="btn btn-warning btn-key">笔记本电脑</button>
			<button type="button" class="btn btn-danger btn-key">新百伦</button>
			<button type="button" class="btn btn-default btn-key">白菜</button>
			<button type="button" class="btn btn-primary btn-key">机械键盘</button>
			<button type="button" class="btn btn-success btn-key">耳机</button>
			<button type="button" class="btn btn-info btn-key">电视</button>
			<button type="button" class="btn btn-warning btn-key">天猫超市</button>
			<button type="button" class="btn btn-danger btn-key">金牌会员</button>
			<button type="button" class="btn btn-default btn-key">红翼</button>
			<button type="button" class="btn btn-primary btn-key">固态硬盘</button>
			<button type="button" class="btn btn-success btn-key">钱包</button>
			<button type="button" class="btn btn-info btn-key">单反</button>
			<button type="button" class="btn btn-warning btn-key">iPhone</button>
			<button type="button" class="btn btn-danger btn-key">Mac</button>
			<button type="button" class="btn btn-default btn-key">Surface</button>
			<button type="button" class="btn btn-primary btn-key">手办</button>
			<button type="button" class="btn btn-success btn-key">漫画</button>
			<button type="button" class="btn btn-info btn-key">乐高</button>
			<button type="button" class="btn btn-warning btn-key">手机</button>
			<button type="button" class="btn btn-danger btn-key">象印</button>
		</div>
  	</div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->