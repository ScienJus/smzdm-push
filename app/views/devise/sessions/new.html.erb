
<div id="login-form">
  <h2>登录</h2>
  <p class="error-alert"><%= alert %></p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
	  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "邮箱" %>
    </div>

    <div class="field">
	  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "密码" %>
    </div>

    <div class="field">
	  <% if devise_mapping.rememberable? -%>
		<label>
         <%= f.check_box :remember_me %> 记住我
        </label>
	  <% end -%>  
      <%= link_to "忘记密码?", new_password_path(resource_name) %>
    </div>

    <div class="actions">
      <%= f.submit "登  录", class: "btn btn-default btn-submit" %>
    </div>
  <% end %>
</div>

