<div id="login-form">
  <h2>注册</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <!--<%= devise_error_messages! %>-->

    <div class="field">
		<%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "邮箱" %>
	</div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "密码" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "确认密码"  %>
    </div>

    <div class="actions">
      <%= f.submit "注册", class: "btn btn-default btn-submit" %>
    </div>
  <% end %>
</div> 

